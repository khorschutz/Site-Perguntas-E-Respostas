<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>


    
    <div class="container" id="index-style">
        
        <a href="/makequestion" class="btn btn-dark">Perguntar</a>
        <hr>
        <h1><em>Perguntas:</em></h1>
        <% questions.forEach(function(question){ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= question.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/perguntaId/<%= question.id %>"<button class="btn btn-dark">Responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>
    
</body>
